@model SelectList
@{
    ViewData["Title"] = "Annual Sales Report";
}

<h2>@ViewData["Title"]</h2>

<!-- Dropdown to select year -->
<div class="form-group">
    <label for="year">Select Year:</label>
    <select id="year" name="year" class="form-control">
        <option value="">Select a Year...</option>
        @foreach (var year in Model)
        {
            <option value="@year.Value">@year.Text</option>
        }
    </select>
</div>

<hr />

<!-- Table for report data -->
<table id="reportTable" class="table table-bordered" style="display:none;">
    <thead>
        <tr>
            <th>Month</th>
            <th>Total Items</th>
            <th>Total Sales ($)</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div id="noDataMessage" style="display:none;">No data available for this year.</div>

<!-- D3 Bar Chart -->
<div>
    <svg width="100%" height="400px" class="border border-primary rounded p-2"></svg>
</div>

@section Scripts {
    <script type="module">
        import * as d3 from "https://cdn.jsdelivr.net/npm/d3@7/+esm";

        const svg = d3.select("svg");
        const w = svg.node().getBoundingClientRect().width;
        const h = svg.node().getBoundingClientRect().height;
        const margin = 5; // space between bars

        function buildGraph(dataSet) {
            console.log("Building graph with data:", dataSet);

            if (!dataSet || dataSet.length === 0) {
                svg.selectAll("*").remove();
                return;
            }

            const barWidth = w / dataSet.length;
            const maxItems = d3.max(dataSet, d => d.totalItems);

            // Bind data to groups
            const barGroups = svg.selectAll("g").data(dataSet);

            // EXIT old elements
            barGroups.exit().remove();

            // ENTER new elements
            const newBarGroups = barGroups.enter()
                .append("g")
                .attr("transform", (d, i) => `translate(${i * barWidth},0)`);

            // Append rectangles
            newBarGroups.append("rect")
                .attr("x", 0)
                .attr("y", d => h - (d.totalItems / maxItems) * h)
                .attr("width", barWidth - margin)
                .attr("height", d => (d.totalItems / maxItems) * h)
                .attr("fill", "steelblue");

            // Append text above bars
            newBarGroups.append("text")
                .text(d => d.totalItems)
                .attr("x", (barWidth - margin) / 2)
                .attr("y", d => h - (d.totalItems / maxItems) * h - 5)
                .attr("text-anchor", "middle")
                .attr("fill", "black");

            // UPDATE existing groups
            barGroups.transition()
                .duration(500)
                .select("rect")
                .attr("y", d => h - (d.totalItems / maxItems) * h)
                .attr("height", d => (d.totalItems / maxItems) * h);

            barGroups.transition()
                .duration(500)
                .select("text")
                .text(d => d.totalItems)
                .attr("y", d => h - (d.totalItems / maxItems) * h - 5);
        }

        // Dropdown event listener
        document.getElementById("year").addEventListener("change", function () {
            const year = this.value;
            const table = document.getElementById("reportTable");
            const tbody = table.querySelector("tbody");
            const noData = document.getElementById("noDataMessage");

            tbody.innerHTML = "";
            table.style.display = "none";
            noData.style.display = "none";

            if (!year) return;

            fetch(`/Reports/AnnualSalesReportData?year=${year}`)
                .then(response => {
                    if (!response.ok) throw new Error("Error fetching data");
                    return response.json();
                })
                .then(data => {
                    if (!data || data.length === 0) {
                        noData.style.display = "block";
                        svg.selectAll("*").remove();
                    } else {
                        // Populate table
                        data.forEach(row => {
                            const tr = document.createElement("tr");
                            tr.innerHTML = `
                                        <td>${row.monthName}</td>
                                        <td>${row.totalItems}</td>
                                        <td>${row.totalSales.toFixed(2)}</td>
                                    `;
                            tbody.appendChild(tr);
                        });
                        table.style.display = "table";

                        // Build D3 graph
                        buildGraph(data);
                    }
                })
                .catch(err => {
                    console.error(err);
                    noData.style.display = "block";
                    svg.selectAll("*").remove();
                });
        });
    </script>
}
